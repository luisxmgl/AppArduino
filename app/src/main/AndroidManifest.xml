<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Aquí está! Permiso para conexión WiFi/HTTP con Arduino -->
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.usb.host" />
    <uses-permission android:name="android.permission.USB_PERMISSION" />

    <application
        android:allowBackup="true"
        android:label="Appaqui"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name="com.example.appaqui.RegisterActivity" />
        <activity android:name="com.example.appaqui.MainActivity" />

        <activity
            android:name="com.example.appaqui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
